<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat" />

    <style name="SwipeBackLayout" parent="AppBaseTheme">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/activity_shadow_left</item>
        <item name="shadow_right">@drawable/activity_shadow_right</item>
        <item name="shadow_bottom">@drawable/activity_shadow_bottom</item>
        <item name="android:windowIsTranslucent">true</item>
        
        <item name="actionBarStyle">@style/ActionBarStyle_.</item>
    </style>

    <style name="ActionBarStyle_." parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/bg_action_bar</item>
        <!-- <item name="backgroundSplit">@drawable/bg_action_split</item> -->
    </style>

</resources>